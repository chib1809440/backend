generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// ENUMS
// =======================

model Order {
  id        String   @id
  status    String
  createdAt DateTime @default(now())
}

model OutboxEvent {
  id          String    @id
  eventType   String
  payload     Json
  status      String
  createdAt   DateTime  @default(now())
  processedAt DateTime?
}

model Product {
  id        String   @id
  name      String
  price     Float
  createdAt DateTime @default(now())
}
